<odoo>
    <record id="view_sale_training_tag_tree" model="ir.ui.view">
        <field name="name">sale.training.tag.tree</field>
        <field name="model">sale.training.tag</field>
        <field name="arch" type="xml">
        <list multi_edit="1">
            <field name="name"/>
            <field name="sequence"/>
            <field name="color"/>
            <field name="active"/>
        </list>
        </field>
    </record>


    <record id="view_sale_training_tag_form" model="ir.ui.view">
        <field name="name">sale.training.tag.form</field>
        <field name="model">sale.training.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="color"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_sale_training_tag_kanban" model="ir.ui.view">
        <field name="name">sale.training.tag.kanban</field>
        <field name="model">sale.training.tag</field>
        <field name="arch" type="xml">
            <kanban default_group_by="active">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong t-esc="record.name.value"/>
                            <div class="text-muted">
                            Seq: <t t-esc="record.sequence.value or 0"/>
                        </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


