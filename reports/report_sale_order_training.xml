<odoo>
    <data>
        <template id="cds_so_doc_extra" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[contains(@class,'page')]" position="inside">
                <div class="mt-3">
                    <p>
                        <strong>Training Tags:</strong>
                        <span t-esc="', '.join(doc.training_tag_ids.mapped('name')) or '-'"/>
                    </p>
                    <p>
                        <strong>Stock Ready:</strong>
                        <span t-esc="'Ready' if doc.stock_ready else 'No'"/>
                    </p>
                    <t t-if="doc.customer_note">
                        <p>
                            <strong>Customer Note:</strong>
                            <span t-esc="doc.customer_note"/>
                        </p>
                    </t>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
